# Telegram — get api_id and api_hash from https://my.telegram.org
TG_API_ID=12345678
TG_API_HASH=abcdef0123456789abcdef0123456789

# Telegram session string — generate with: python generate_session.py
TG_SESSION=1BVtsOKwBu...long-string...==

# Telegram source group chat IDs — comma-separated (negative numbers for groups)
# Find by running: python list_groups.py
TG_CHAT_IDS=-1001234567890,-1009876543210

# Discord webhook URL — create in Discord channel settings > Integrations > Webhooks
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/1234567890/abcdef...

# Timezone for message timestamps (IANA format)
TIMEZONE=Europe/Berlin
